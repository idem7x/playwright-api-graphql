{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@constants/*": ["constants/*"],
      "@fixtures/*": ["fixtures/*"],
      "@schemas/*": ["schemas/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["node", "@playwright/test"]
  },
  "include": ["**/*.ts", "**/*.d.ts"],
  "exclude": ["node_modules"]
}

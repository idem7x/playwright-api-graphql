{
  "name": "playwright-graphql-api",
  "version": "1.0.0",
  "description": "GraphQL API testing framework using Playwright",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "lint": "eslint --ext .ts",
    "lint:fix": "eslint --ext .ts --fix"
  },
  "keywords": [
    "playwright",
    "graphql",
    "api-testing",
    "testing",
    "automation"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "1.48.0",
    "@types/node": "22.0.0",
    "@typescript-eslint/eslint-plugin": "8.0.0",
    "@typescript-eslint/parser": "8.0.0",
    "ajv": "8.12.0",
    "ajv-formats": "3.0.1",
    "dotenv": "16.3.1",
    "eslint": "9.0.0",
    "typescript": "5.3.3"
  }
}
